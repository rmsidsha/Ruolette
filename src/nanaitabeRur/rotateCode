public Rotate() throws FileNotFoundException, IOException {
   setSize(500,500);
   
   JPanel panel = new JPanel();
   JLabel label = new JLabel();
   
   String path = "C:\\Users\\JaeWon\\Desktop\\캡처.jpg";  //파일 경로
   BufferedImage oldImage = ImageIO.read(new FileInputStream(path));  
   BufferedImage newImage = new BufferedImage(oldImage.getHeight(), oldImage.getWidth(), oldImage.getType());
   Graphics2D graphics = (Graphics2D) newImage.getGraphics();
   graphics.rotate(Math.toRadians(90), newImage.getWidth() / 2, newImage.getHeight() / 2);
   graphics.translate((newImage.getWidth() - oldImage.getWidth()) / 2, (newImage.getHeight() - oldImage.getHeight()) / 2);
   graphics.drawImage(oldImage, 0, 0, oldImage.getWidth(), oldImage.getHeight(), null);
   ImageIO.write(newImage, "JPEG", new FileOutputStream(path));
   
   ImageIcon i = new ImageIcon(newImage);
   label.setIcon(i);
   panel.add(label);
   setVisible(true);
   add(panel);
}
